<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <import resource="classpath:dao.xml"/>
    <!-- Company services -->
    <bean id="companyService"
          class="com.excilys.computerdatabase.service.implementation.CompanyServiceImp"
    >
        <property name="companyDAO" ref="companyDAO"/>

    </bean>
    <!-- Computer services -->
    <bean id="computerService"
          class="com.excilys.computerdatabase.service.implementation.ComputerServiceImp"
    >
        <property name="computerDAO" ref="computerDAO"/>
    </bean>


</beans>