<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- connection -->

    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
        <property name="poolName" value="springHikariCP"/>
        <property name="dataSourceClassName" value="com.mysql.jdbc.Driver"/>

        <property name="maximumPoolSize" value="100"/>


        <property name="dataSourceProperties">
            <props>
                <prop key="url">jdbc:mysql://127.0.0.1:3306/computer-database-db?zeroDateTimeBehavior=convertToNull
                </prop>
                <prop key="user">admincdb</prop>
                <prop key="password">qwerty1234</prop>
            </props>
        </property>
    </bean>

    <!-- HikariCP configuration -->
    <bean id="datasource" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg ref="hikariConfig"/>
    </bean>

</beans>